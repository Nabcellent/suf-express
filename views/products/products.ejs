<%- include('../partials/alert.ejs') %>

<div id="products" class="container-fluid p-0">
    <div class="row">
        <div class="col-9">
            <div class="card crud_table shadow mb-4">
                <div class="card-header d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-info"><i class="fab fa-opencart"></i> SU-F Products</h6>
                    <a href="/products/create" class="btn btn-outline-info">Add Product</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-borderless table-hover crud_table" id="products_table">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Manufacturer</th>
                                <th>Date</th>
                                <th>Price</th>
                                <th>Sale Price</th>
                                <th>Label</th>
                                <th>Qty sold</th>
                                <th>Action</th>
                            </tr>
                            </thead>

                            <tbody>

                            <% productsInfo.products.forEach((row) => { %>
                                <tr>
                                    <td></td>
                                    <td><img src="images/products/<%= row.main_image %>" alt="product" class="img-fluid"></td>
                                    <td class="title"><%= row.title %></td>
                                    <td><%= row.first_name %> <%= row.last_name %></td>
                                    <td class="text-nowrap"><%= productsInfo.moment(row.created_at).format('D/M/YY') %></td>
                                    <td class="text-center"><%= row.base_price %></td>
                                    <td class="text-center"><%= row.sale_price %></td>
                                    <td><%= row.label %></td>
                                    <td class="text-center"><%= row.qry_sold %></td>
                                    <td class="action">
                                        <a href="/products/details/all/<%= row.id %>" class="ml-3" title="view">
                                            <i class="fas fa-eye text-info"></i>
                                        </a>
                                        <a href="#" class="ml-2 delete_product" data-toggle="modal" data-id="<%= row.id %>"
                                           data-image="<%= row.main_image %>" data-target="#delete_product_modal" title="Remove">
                                            <i class="fas fa-trash text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('./modals/products_modals') %>