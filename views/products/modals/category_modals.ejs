
<!--#################################################    MODALS    #################################################-->

<!--&&&===    CATEGORIES    ===&&&-->
<div class="modal fade" id="add_category" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/products/categories" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="title" aria-label required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>



<!--&&&===    SUB-CATEGORIES    ===&&&-->
<div class="modal fade" id="add_sub_category" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/products/categories" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="title" aria-label required>
                    </div>
                    <label>Select Categories</label>
                    <% categoryInfo.categories.forEach((row) => { %>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="categories" value="<%= row.id %>" id="<%= row.id %>">
                            <label class="custom-control-label" for="<%= row.id %>"><%= row.title %></label>
                        </div>
                    <% }); %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>