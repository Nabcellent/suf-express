
<div id="slides">

    <!--    Start Breadcrumb    -->

    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item" aria-current="page"><i class="fas fa-cog"></i> Admin Panel</li>
                    <li class="breadcrumb-item active" aria-current="page"> Sliders</li>
                </ul>
            </nav>
        </div>
    </div>
    <!--    End Breadcrumb    -->

    <div class="row">
        <div class="col-xl-11 col-lg-12">
            <div class="card crud_box shadow">
                <div class="card-header d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-info"><i class="fab fa-slideshare"></i> SU-F Slides</h6>
                    <button type="button" id="btn_add_slide" data-toggle="modal" data-target="#crud_modal" class="btn btn-outline-info">
                        Add Slide
                    </button>
                </div>
                <div class="card-body">
                    <div class="row">

                        <% sliderInfo.slides.forEach((row) => { %>
                        <div class="col-xl-3 col-md-6 align-self-center card-body border-info shadow slider_box">
                            <div class="slider_title">Slide <%= row.slide_number %></div>
                            <div class="slider_img">
                                <img src="images/slides/<%= row.slide_image %>" alt="">
                            </div>
                            <div class="slider_action">
                                <a href="#"><i class="fas fa-pen"></i></a>
                                <a href="#"><i class="fas fa-trash"></i></a>
                            </div>
                            <div class="slider_url"><a href="<%= row.slide_url %>"><%= row.slide_url %></a></div>
                        </div>
                        <% }) %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--    Start Edit modal    -->

<div class="modal fade" id="crud_modal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content text-info overflow-auto">
            <form id="slide_form" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close text-info" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="slide_name">Slide Name</label>
                        <select name="slide_name" id="slide_name" class="form-control">
                            <option hidden value="">Select Slide Number</option>
                            <option value="Slide Number 1">Slide Number 1 </option>
                            <option value="Slide Number 2">Slide Number 2 </option>
                            <option value="Slide Number 3">Slide Number 3 </option>
                            <option value="Slide Number 4">Slide Number 4 </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label> Slide Image</label>
                        <div class="input-group my-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input form-control" id="slide_image" name="slide_image" aria-describedby="inputGroupFileAddon">
                                <label class="custom-file-label" for="slide_image">Choose an Image</label>
                            </div>
                        </div>
                        <img src="" alt="" class="img-fluid product_img1" style="width: 7rem">
                    </div>
                    <div class="form-group">
                        <label for="slide_url">Slide Url</label>
                        <input type="text" id="slide_url" name="slide_url" class="form-control" placeholder="Enter slide url">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="slide_id" name="slide_id">
                    <button type="button" class="btn btn-outline-info" data-dismiss="modal">Cancel</button>
                    <button type="submit" name="slide_crud" class="btn btn-info submit"></button>
                    <img class="loader_gif" src="image/loaders/Gear-0.2s-200px.gif" alt="loader.gif">
                </div>
            </form>
        </div>
    </div>
</div>
<!--    End Edit modal    -->

<!--    Start delete modal    -->

<div class="modal fade" id="del_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="../../admin/index.php?slides&del_id=" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Slide</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this slide?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-danger">Delete Slide</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--    End Delete Modal    -->